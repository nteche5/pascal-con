{
  "name": "pksa-construction-website",
  "version": "1.0.0",
  "description": "PKSA Construction & Engineering Consultancy Ltd - Official Website",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "type-check:watch": "tsc --noEmit --watch",
    "build:type-check": "npm run build && npm run type-check",
    "dev:type-check": "concurrently \"npm run dev\" \"npm run type-check:watch\"",
    "lint:fix": "next lint --fix",
    "preview": "next start",
    "vercel-build": "npm run build:type-check"
  },
  "engines": {
    "node": ">=20 <21",
    "npm": ">=10"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.78.0",
    "@types/nodemailer": "^7.0.3",
    "next": "^14.2.33",
    "nodemailer": "^7.0.10",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@next/swc-wasm-nodejs": "^14.2.33",
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "eslint": "^8.54.0",
    "eslint-config-next": "^14.2.33",
    "typescript": "^5.3.0",
    "concurrently": "^8.2.0"
  }
}
